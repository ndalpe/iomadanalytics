{{!
    @template report_iomadanalytics/all_ctry_avg_block

    Template which defines the average of each countries final test grade

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * headings - string: block title
    * keyMetric - string: average of all country
  * countries - array: contains all the country name along with their final test average
}}
{{# AllCtryProgressBlock}}
<div class="card" id="nic">
  <div class="card-block">
    <h4 class="card-title">{{header}}</h4>
    {{# keyMetric}}
    <div class="row">
      <div class="col-md-4"><h6 class="card-subtitle mb-2 text-muted">{{notStarted_label}}<br>{{notStarted_metric}}%</h6></div>
      <div class="col-md-4"><h6 class="card-subtitle mb-2 text-muted">{{started_label}}<br>{{started_metric}}%</h6></div>
      <div class="col-md-4"><h6 class="card-subtitle mb-2 text-muted">{{completed_label}}<br>{{completed_metric}}%</h6></div>
    </div>
    {{/ keyMetric}}
    {{# countries}}
    <p class="card-text">{{name}} {{notStarted}} {{started}} {{completed}}</p>
    {{/ countries}}
  </div>
</div>
{{/ AllCtryProgressBlock}}