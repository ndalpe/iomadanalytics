{{!
    @template report_iomadanalytics/all_ctry_avg_block

    Template which defines the how many student completed, started or not started the course

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * headings - string: block title
    * keyMetric - string: average of all country
  * countries - array: contains all the country name along with their final test average
}}
{{# AllCtryProgressBlock}}
<div class="card card_style">
  <div class="card-block">
    <h4 class="card-title text-center">{{# str }}AllCtryProgressBlock_title, report_iomadanalytics{{/ str }}</h4>
    {{# keyMetric}}
    <div class="row">
      <div class="col-md-4"><p class="text-center">{{{notStarted_label}}}<br><span class="colRed">{{notStarted_metric}}%</span></p></div>
      <div class="col-md-4"><p class="text-center">{{started_label}}<br><span class="colYellow">{{started_metric}}%</span></p></div>
      <div class="col-md-4"><p class="text-center">{{completed_label}}<br><span class="colGreen">{{completed_metric}}%</span></p></div>
    </div>
    {{/ keyMetric}}
    <table>
    {{# countries}}
    <tr>
        <td class="countryName">{{name}}</td>
        <td>
            <div class="bkgBar">
                <div class="bar bkgRed" style="width:{{notStarted_percent}}%;">
                    <img src="/pix/spacer.gif" width="1" height="1" />
                </div>
                <div class="bar bkgYellow" style="width:{{started_percent}}%;">
                    <img src="/pix/spacer.gif" width="1" height="1" />
                </div>
                <div class="bar bkgGreen" style="width:{{completed_percent}}%;">
                    <img src="/pix/spacer.gif" width="1" height="1" />
                </div>
            </div>
        </td>
    </tr>
    {{/ countries}}
    </table>
  </div>
</div>
{{/ AllCtryProgressBlock}}