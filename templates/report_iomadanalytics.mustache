{{!
    @template report_iomadanalytics/all_ctry_avg_block

    Template which defines the average of each countries final test grade

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * headings - string: block title
    * keyMetric - string: average of all country
  * countries - array: contains all the country name along with their final test average
}}
<div class="report_section">
  <div class="row">
    <div class="col-md-12">
      <h2 class="section_title">{{systemoverview_block_title}}</h2>
    </div>
  </div>
  <div class="card-deck">
    {{> report_iomadanalytics/allCtryAvgBlock_rendered }}
    {{> report_iomadanalytics/allCtryProgressBlock_rendered }}
    {{> report_iomadanalytics/allCtryTimeCompBlock_rendered }}
  </div>
</div>

<div class="report_section">
<form class="">
  <div class="row">
    <div class="col-md-12">
      <h2 class="section_title">{{detailledgrades_block_title}}</h2>
    </div>
  </div>
  <div class="row padLR15">
    <div class="col-lg-12 col-md-12 col-sm-8 col-xs-9 card_style bhoechie-tab-container">
      <div class="col-lg-2 col-md-2 col-sm-3 col-xs-3 bhoechie-tab-menu">
        <div class="list-group">
          <a href="#" class="list-group-item active text-center">
            <h4 class="fa fa-map fa-2x"></h4><br/>{{countryselector_block_title}}
          </a>
          <a href="#" class="list-group-item text-center">
            <h4 class="fa fa-user fa-2x"></h4><br/>{{filtersselector_block_title}}
          </a>
        </div>
      </div>
      <div class="col-lg-10 col-md-10 col-sm-9 col-xs-9 bhoechie-tab">
        <!-- countries section -->
        <div id="countries_tab" class="bhoechie-tab-content active">
          <h4>{{countryselector_tab_title}}</h4>
          <p class="text-muted"><i class="fa fa-info"></i> {{countryselector_tab_help}}</p>
          <div class="row">
          {{# CntryList}}
          <div class="col-md-6">
            <div class="country">
              <div class="form-check">
                  <label class="custom-control custom-checkbox">
                    <input class="custom-control-input" type="checkbox" checked="checked" value="{{country_abbr}}" id="{{country_abbr}}">
                    <span class="custom-control-indicator"></span>
                    <span class="custom-control-description">{{country_name}}</span>
                  </label>
              </div>
            </div>
            <div class="country_company country-{{country_abbr}}">
              {{{companies}}}
            </div>
          </div>
          {{/ CntryList}}
          </div>
        </div>
        <!-- profile section -->
        <div id="filters_tab" class="bhoechie-tab-content">
          <input type="hidden" name="selectedFilter" id="selectedFilter" value="all" />
          <h4>{{filtersselector_tab_title}}</h4>
          <p class="text-muted"><i class="fa fa-info"></i> {{filtersselector_tab_help}}</p>
          {{# FilterList}}
          <button type="button" id="{{shortname}}" data-filterid="{{id}}" class="btn btn-primary">{{name}}</button>
          {{/ FilterList}}
        </div>
          <input type="button" id="btn" value="blabla" />
      </div>
    </div>
  </div>
</form>
</div><!-- /report_section -->

<div class="report_section">

  {{!
    Graph Final Grades
  }}
  <div class="row">
    <div class="col-md-12">
      <h2>{{gradesGraph_block_title}}</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <canvas id="chart-grades"></canvas>
    </div>
  </div>

  {{!
    Graph Progress
  }}
  <div class="row">
    <div class="col-md-12">
      <h2>{{progressGraph_block_title}}</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="row" id="progressGraph"></div>
    </div>
  </div>

</div><!-- /report_section -->